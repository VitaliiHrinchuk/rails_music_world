<!DOCTYPE html>
<html>
  <head>
    <title>Musicworld</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet"
    />
    <%= stylesheet_link_tag 'admin' %>
    <%= javascript_pack_tag 'admin' %>
    
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  </head>

  <body>
    <% if is_admin? %>
      <ul id="slide-out" class="sidenav sidenav-fixed">
        <li><%= link_to "<i class='material-icons'>receipt</i>Пости".html_safe, admin_posts_path %></li>
        <li><%= link_to "<i class='material-icons'>queue</i>Створити пост".html_safe, new_admin_post_path %></li>
        <li><%= link_to "<i class='material-icons'>label</i>Теги".html_safe, admin_tags_path %></li>
        <li><%= link_to "<i class='material-icons'>add</i>Додати тег".html_safe, new_admin_tag_path %></li>
        <li><%= link_to "<i class='material-icons'>music_note</i>Композитори".html_safe, admin_composers_path %></li>
        <li><%= link_to "<i class='material-icons'>add_circle_outline</i>Додати композитора".html_safe, new_admin_composer_path %></li>
        <li><%= link_to "<i class='material-icons'>list</i>Список категорій".html_safe, admin_categories_path %></li>
         <li><%= link_to "<i class='material-icons'>playlist_add</i>Додати Категорію".html_safe, new_admin_category_path %></li>
      </ul>
      <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    <% end %>

    
    <main>
      <%= yield %>
    </main>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://unpkg.com/vanilla-datatables@latest/dist/vanilla-dataTables.min.js" type="text/javascript"></script>
  </body>
</html>
