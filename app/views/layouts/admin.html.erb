<!DOCTYPE html>
<html>
  <head>
    <title>Musicworld</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet"
    />
    <%= stylesheet_link_tag 'admin' %>
    <%= javascript_pack_tag 'admin' %>
    
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  </head>

  <body>
    <% if is_admin? %>
      <ul id="slide-out" class="sidenav sidenav-fixed">
        <li><%= link_to "Пости", admin_posts_path %></li>
        <li><%= link_to "Створити пост", new_admin_post_path %></li>
        <li><%= link_to "Теги", admin_tags_path %></li>
        <li><%= link_to "Додати тег", new_admin_tag_path %></li>
        <li><%= link_to "Композитори", admin_composers_path %></li>
        <li><%= link_to "Додати композитора", new_admin_composer_path %></li>
      </ul>
      <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    <% end %>

    
    <main>
      <%= yield %>
    </main>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://unpkg.com/vanilla-datatables@latest/dist/vanilla-dataTables.min.js" type="text/javascript"></script>
  </body>
</html>
