
<div class="row">
<h1 class="title">Створити тег</h1>
<div class="auth-error col s12">
  <% if @tag && @tag.errors.full_messages.any? %>
    <% @tag.errors.full_messages.each do |error_message| %>
      <%= error_message  %> <br />
    <% end %>
  <% end %>
</div>
<%= form_tag('/admin/tags',{:class => 'col s12 l8 form-content',:multipart => true}) do %>
      <div class="input-field col s12">
        <input id="name" name="name" type="text" />
        <label for="name">Назва</label>
      </div>

      <div class="col s12">
        <button class="waves-effect waves-light btn-small" type="submit">
          Опублікувати
        </button>
      </div>
    <% end %>
</div>


