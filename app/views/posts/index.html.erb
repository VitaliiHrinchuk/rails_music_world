<section class="container single-topic">
      <div class="row posts-container">
        <div class="col l7 s12">
        <% @data.each do |post| %>
          <div class="posts card-bg">
            <a href="/posts/read/<%= post['id']%>"
              >
            <%= image_tag("/assets/posts/#{post['bg_img']}", class: "posts-img") %></a>
            <div class="posts-category">
         
              <% post['tags'].each do |tag| %>
                <span>| <%= tag['tag_name'] %></span>
              <% end %>
            </div>
            <a href="/posts/read/<%= post['id']%>">
              <h2 class="posts-title">
              <%= post['theme'] %>
              </h2></a
            >
            <p class="posts-content">
            <%= strip_tags post['content'].truncate(50) %>
            </p>
            <div class="posts-footer">
              <div class="posts-comment">
                <span class="count"><%= post['comments'] %></span>
                <i class="tiny material-icons">mode_comment</i>
              </div>
              <div class="posts-date"><%= post['created_at'].to_time.to_formatted_s(:short) %></div>
            </div>
          </div>
        <% end %>
          
    
          <ul class="pagination">
            <% if  @page >= 1 %>
              <li class="waves-effect">
                <%= link_to posts_path(page: @page - 1) do %>
                  <i class="material-icons">chevron_left</i>
                <% end %>
              </li>
            <% end %>
          
            <% for i in 0..@pages_count   %>
              <li class="waves-effect <%= @page == i ? 'active' :''  %>">
                <%= link_to i + 1, posts_path(page: i) %>
              </li>
            <% end %>

            <% if @pages_count  > @page %>
              <li class="waves-effect">
                <%= link_to posts_path(page: @page + 1) do %>
                  <i class="material-icons">chevron_right</i>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="col l5 s12">
          <div class="card-panel card-bg">
            <h5 class="sidebar-title">Search</h5>
            <div class="row search-container">
              <form action="" class="col s12">
                <div class="input-field">
                  <input id="q" type="text" />
                  <label for="q">Search</label>
                </div>
                <button
                  type="submit"
                  class="waves-effect waves-light btn-small"
                >
                  Пошук
                </button>
              </form>
            </div>
          </div>
